#include <iostream>
#include <string>
#include <algorithm> // For std::reverse

void reverseString(std::string str) {
    std::reverse(str.begin(), str.end());
    std::cout << "Reversed string: " << str << std::endl;
}

int main() {
    std::string input;
    std::cout << "Enter a string: ";
    std::cin >> input;
    
    reverseString(input);
    
    return 0;
}
